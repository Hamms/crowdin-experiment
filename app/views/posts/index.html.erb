<div class="container my-3">
  <h2>All Posts</h2>
  <hr />
</div>


<div class="container">
  <% @posts.each do |post| %>
    <div class="row mb-4">
      <div class="col">
        <div class="row">
          <div class="col">
            <h3 class="mb-0"><%= link_to post.translated(:title), post_path(post) %></h3>
            <p class="text-secondary">
              <span>
                posted <%= post.created_at < 1.day.ago ?
                  "on #{post.created_at.to_date.to_formatted_s(:long)}" :
                  "#{time_ago_in_words(post.created_at)} ago" %>
              </span>
              <%= link_to '(edit)', edit_post_path(post) %>
            <p>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <%= markdown(post.translated(:text)) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
