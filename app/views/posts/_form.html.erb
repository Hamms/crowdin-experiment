<div class="container">
  <%= form_with model: @post, local: true do |form| %>

    <% if @post.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <p>
          <%= pluralize(@post.errors.count, "error") %> prohibited this post
          from being saved:
        </p>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= form.label :title, class: "col-sm-1 col-form-label" %><br>
      <div class="col-sm-6">
        <%= form.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :text, class: "col-sm-1 col-form-label" %><br>
      <div class="col-sm-6">
        <%= form.text_area :text, class: "form-control", rows: 8 %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-4">
        <%= form.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", posts_path, class: "btn btn-secondary" %>
      </div>
    </div>

  <% end %>
</div>
