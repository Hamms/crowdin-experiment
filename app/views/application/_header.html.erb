<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to "Crowdin Webhooks Test", root_path, class: "navbar-brand" %>
  <ul class="navbar-nav mr-auto">
    <li class="nav-item">
      <%= link_to 'All Posts', posts_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to 'New Post', new_post_path, class: "nav-link" %>
    </li>
  </ul>
  <ul class="navbar-nav">
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Language
      </a>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <span class="dropdown-item">Current: <%= I18n.t(I18n.locale, scope: :language_names) %></span>
        <div class="dropdown-divider"></div>
        <% I18n.available_locales.each do |locale| %>
          <% next if locale == I18n.locale %>
          <%= link_to url_for(locale: locale), class: "dropdown-item" do %>
            <span><%= I18n.t(locale, scope: :language_names, locale: locale) %></span>
            <span class="text-secondary">(<%= I18n.t(locale, scope: :language_names) %>)</span>
          <% end %>
        <% end %>
      </div>
    </li>
  </ul>
</nav>
